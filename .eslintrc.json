{
    "ignorePatterns": [
        "node_modules",
        "dist",
        "tests"
    ],
    "plugins": [
        "spellcheck"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "error",
        "for-direction": "error",
        "spellcheck/spell-checker": [
            "warn",
            {
                "comments": true,
                "strings": true,
                "identifiers": true,
                "lang": "en_US",
                "skipWords": [
                    ".js",
                    "bg",
                    "img",
                    "kastor",
                    "afterbegin"
                ],
                "skipIfMatch": [
                    "http://[^s]*",
                    "^[-\\w]+\/[-\\w\\.]+$" //For MIME Types
                ],
                "skipWordIfMatch": [
                    "^foobar.*$" // words that begin with foobar will not be checked
                ],
                "minLength": 3
            }
        ]
    }
}
